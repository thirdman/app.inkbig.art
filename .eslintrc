{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "rules": {
	  "indent": "off",
    "no-tabs": "off",
    "no-console": "off",
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "react/sort-comp": "off",
    "react/prop-types": "off",
    "react/jsx-indent": "off",
    "react/jsx-indent-props": "off",
    "space-before-function-paren": "off",
    "react/prefer-stateless-function": "warn",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "linebreak-style": "off",
    "global-require": "off",
    "semi": "warn",
    "arrow-body-style": "off",
    "no-plusplus": "off",
  }
}